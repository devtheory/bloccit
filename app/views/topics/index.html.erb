<h1>Topics</h1>
  <% if policy(Topic.new).create? %>
    <%= link_to "New Topic", new_topic_path, style: "margin-bottom:10px", class: 'btn btn-success' %>
  <% end %>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @topics %>
  </div>
</div>